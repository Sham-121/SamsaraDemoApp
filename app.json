{
  "expo": {
    "name": "PulseApp",
    "slug": "PulseApp",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "platforms": ["android", "ios", "web"],
    "android": {
      "package": "com.yourcompany.pulseapp",
      "permissions": ["CAMERA", "FLASHLIGHT", "VIBRATE"],
      "versionCode": 1
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "PulseApp needs camera access to measure heart rate using your fingertip."
      }
    }
  }
}
